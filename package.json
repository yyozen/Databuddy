{
  "name": "databuddy",
  "module": "index.ts",
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/bun": "latest",
    "@types/node": "^24.10.1",
    "chalk": "^5.6.2",
    "dotenv-cli": "^10.0.0",
    "knip": "^5.70.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "ultracite": "^6.3.6"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.2.19",
  "private": true,
  "scripts": {
    "build": "infisical run -- turbo run build",
    "build:local": "dotenv -- turbo run build",
    "dev": "infisical run -- turbo run dev",
    "dev:local": "dotenv -- turbo run dev",
    "start": "infisical run -- turbo run start",
    "start:local": "dotenv -- turbo run start",
    "test": "infisical run -- bun test ./apps",
    "test:local": "dotenv -- bun test ./apps",
    "test:watch": "infisical run -- bun test --watch ./apps",
    "test:coverage": "infisical run -- bun test --coverage ./apps",
    "lint": "npx ultracite@latest check",
    "format": "npx ultracite@latest fix",
    "check-types": "tsgo --noEmit --project .",
    "generate-db": "turbo run generate --filter=@databuddy/db",
    "db:studio": "infisical run -- turbo run db:studio",
    "db:studio:local": "dotenv -- turbo run db:studio",
    "clickhouse:init": "infisical run -- turbo run clickhouse:init",
    "db:push": "infisical run -- turbo run db:push",
    "db:push:local": "dotenv -- turbo run db:push",
    "db:migrate": "infisical run -- turbo run db:migrate",
    "db:migrate:local": "dotenv -- turbo run db:migrate",
    "db:deploy": "infisical run -- turbo run db:deploy",
    "db:seed": "infisical run -- sh -c 'cd packages/db && bun run db:seed \"$@\"' --",
    "db:seed:local": "dotenv -- sh -c 'cd packages/db && bun run db:seed \"$@\"' --",
    "email:dev": "infisical run -- sh -c 'cd packages/email && bun run dev'",
    "sdk:build": "cd packages/sdk && bun run build",
    "dashboard:dev": "infisical run -- cd apps/dashboard; bun run dev",
    "dashboard:dev:local": "dotenv -- cd apps/dashboard; bun run dev"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "react": "19.0.0",
      "react-dom": "19.0.0",
      "next": "^15.3.4",
      "typescript": "^5.9.3",
      "zod": "4.1.12",
      "tailwindcss": "^4.1.4",
      "autumn-js": "^0.0.101",
      "stripe": "^18.2.1",
      "dayjs": "^1.11.13",
      "elysia": "^1.3.4",
      "pino": "^9.7.0",
      "@phosphor-icons/react": "^2.1.10",
      "@radix-ui/react-dialog": "^1.1.14",
      "@radix-ui/react-popover": "^1.1.14",
      "@radix-ui/react-slot": "^1.2.3",
      "@radix-ui/react-switch": "^1.2.5",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "tailwind-merge": "^3.2.0",
      "framer-motion": "^12.23.6",
      "sonner": "^2.0.6",
      "vaul": "^1.1.2",
      "@tanstack/react-query": "^5.82.0",
      "superjson": "^2.2.2",
      "jotai": "^2.12.5",
      "@clickhouse/client": "^1.11.1",
      "@clickhouse/client-web": "^1.11.1",
      "@logtail/edge": "^0.5.4",
      "@logtail/js": "^0.5.5",
      "@logtail/pino": "^0.5.5",
      "@biomejs/biome": "2.2.2",
      "@types/bun": "latest",
      "@types/react": "19.0.0",
      "@types/react-dom": "19.0.0",
      "bun-types": "latest",
      "ultracite": "5.3.10",
      "turbo": "^2.5.2",
      "drizzle-orm": "^0.42.0",
      "nanoid": "^5.1.6"
    }
  },
  "dependencies": {
    "@axiomhq/pino": "^1.3.1",
    "@opentelemetry/auto-instrumentations-node": "^0.67.1",
    "@orpc/client": "^1.11.3",
    "@orpc/server": "^1.11.3",
    "@orpc/tanstack-query": "^1.11.3",
    "dayjs": "^1.11.19",
    "dotted-map": "^2.2.3",
    "framer-motion": "^12.23.24",
    "jszip": "^3.10.1",
    "pg": "^8.16.3",
    "pg-pool": "^3.10.1",
    "prettier": "^3.6.2",
    "zod": "^4.1.13"
  }
}
