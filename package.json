{
  "name": "databuddy",
  "module": "index.ts",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "latest",
    "@types/dockerode": "^3.3.47",
    "@types/node": "^24.10.2",
    "chalk": "^5.6.2",
    "dockerode": "^4.0.9",
    "dotenv-cli": "^10.0.0",
    "knip": "^5.72.0",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "ultracite": "^6.3.10"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.4",
  "private": true,
  "scripts": {
    "setup": "bun run setup.ts",
    "build": "dotenv -- turbo run build",
    "dev": "dotenv -- turbo run dev",
    "start": "dotenv -- turbo run start",
    "test": "dotenv -- bun test ./apps",
    "test:watch": "dotenv -- bun test --watch ./apps",
    "test:coverage": "dotenv -- bun test --coverage ./apps",
    "lint": "bunx ultracite@latest check",
    "format": "bunx ultracite@latest fix",
    "check-types": "tsgo --noEmit --project .",
    "generate-db": "turbo run generate --filter=@databuddy/db",
    "db:studio": "dotenv -- turbo run db:studio",
    "clickhouse:init": "dotenv -- turbo run clickhouse:init",
    "db:push": "dotenv -- turbo run db:push",
    "db:migrate": "dotenv -- turbo run db:migrate",
    "db:deploy": "dotenv -- turbo run db:deploy",
    "db:seed": "dotenv -- sh -c 'cd packages/db && bun run db:seed \"$@\"' --",
    "email:dev": "dotenv -- sh -c 'cd packages/email && bun run dev'",
    "sdk:build": "cd packages/sdk && bun run build",
    "dev:dashboard": "turbo dev --filter @databuddy/dashboard --filter @databuddy/api"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "react": "19.2.1",
      "react-dom": "19.2.1",
      "next": "^15.3.4",
      "typescript": "^5.9.3",
      "zod": "4.1.12",
      "tailwindcss": "^4.1.4",
      "autumn-js": "^0.0.101",
      "stripe": "^18.2.1",
      "dayjs": "^1.11.13",
      "elysia": "^1.3.4",
      "pino": "^9.7.0",
      "@phosphor-icons/react": "latest",
      "@radix-ui/react-dialog": "^1.1.14",
      "@radix-ui/react-popover": "^1.1.14",
      "@radix-ui/react-slot": "^1.2.3",
      "@radix-ui/react-switch": "^1.2.5",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "tailwind-merge": "^3.2.0",
      "framer-motion": "^12.23.6",
      "sonner": "^2.0.6",
      "vaul": "^1.1.2",
      "@tanstack/react-query": "^5.82.0",
      "superjson": "^2.2.2",
      "jotai": "^2.12.5",
      "@clickhouse/client": "^1.11.1",
      "@clickhouse/client-web": "^1.11.1",
      "@logtail/edge": "^0.5.4",
      "@logtail/js": "^0.5.5",
      "@logtail/pino": "^0.5.5",
      "@biomejs/biome": "2.2.2",
      "@types/bun": "latest",
      "@types/react": "19.2.1",
      "@types/react-dom": "19.2.1",
      "bun-types": "latest",
      "ultracite": "5.3.10",
      "turbo": "^2.5.2",
      "drizzle-orm": "^0.42.0",
      "nanoid": "^5.1.6"
    }
  }
}
