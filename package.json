{
	"name": "databuddy",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "dotenv -- turbo run dev",
		"start": "turbo run start",
		"lint": "npx ultracite@latest lint",
		"format": "npx ultracite@latest format",
		"check-types": "turbo run check-types",
		"generate-db": "turbo run generate --filter=@databuddy/db",
		"db:studio": "dotenv -- turbo run db:studio",
		"clickhouse:init": "cd packages/db && bun run clickhouse:init",
		"db:generate": "turbo run db:generate",
		"db:push": "dotenv -- turbo run db:push",
		"db:migrate": "dotenv -- turbo run db:migrate",
		"db:deploy": "dotenv -- turbo run db:deploy",
		"email:dev": "cd packages/email && bun run dev",
		"sdk:build": "cd packages/sdk && bun run build"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@types/bun": "latest",
		"dotenv-cli": "^9.0.0",
		"turbo": "^2.5.2",
		"typescript": "^5.8.3",
		"ultracite": "5.0.49"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "bun@1.2.19",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"react": "19.0.0",
			"react-dom": "19.0.0",
			"next": "^15.3.4",
			"typescript": "^5.8.3",
			"zod": "3.25.76",
			"tailwindcss": "^4.1.4",
			"autumn-js": "^0.0.101",
			"stripe": "^18.2.1",
			"dayjs": "^1.11.13",
			"elysia": "^1.3.4",
			"pino": "^9.7.0",
			"vitest": "^3.2.4",
			"@phosphor-icons/react": "^2.1.10",
			"@radix-ui/react-dialog": "^1.1.14",
			"@radix-ui/react-slot": "^1.2.3",
			"@radix-ui/react-switch": "^1.2.5",
			"class-variance-authority": "^0.7.1",
			"clsx": "^2.1.1",
			"tailwind-merge": "^3.2.0",
			"framer-motion": "^12.23.6",
			"sonner": "^2.0.6",
			"vaul": "^1.1.2",
			"@tanstack/react-query": "^5.82.0",
			"@trpc/client": "^11.4.3",
			"@trpc/react-query": "^11.4.3",
			"@trpc/server": "^11.4.3",
			"superjson": "^2.2.2",
			"jotai": "^2.12.5",
			"@clickhouse/client": "^1.11.1",
			"@clickhouse/client-web": "^1.11.1",
			"@logtail/edge": "^0.5.4",
			"@logtail/js": "^0.5.5",
			"@logtail/pino": "^0.5.5",
			"@biomejs/biome": "2.1.2",
			"@types/bun": "latest",
			"ultracite": "5.0.49",
			"turbo": "^2.5.2"
		}
	},
	"module": "index.ts",
	"type": "module"
}
