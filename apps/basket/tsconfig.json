{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "paths": {
      "@lib/*": ["./lib/*"],
      "@utils/*": ["./utils/*"],
      "@hooks/*": ["./hooks/*"],
      "@routes/*": ["./routes/*"],
      "@types/*": ["./types/*"]
    },
    "types": ["bun-types", "autumn-js"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/db" },
    { "path": "../../packages/redis" },
    { "path": "../../packages/shared" },
    { "path": "../../packages/validation" }
  ]
}
