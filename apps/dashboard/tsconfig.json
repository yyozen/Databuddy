{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["./lib/*"],
      "~/*": ["../dashboard"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    ".turbo",
    ".turbo",
    "**/node_modules"
  ],
  "skipLibCheck": true,
  "noImplicitAny": false,
  "incremental": true,
  "references": [
    { "path": "../../packages/db" },
    { "path": "../../packages/env" },
    { "path": "../../packages/redis" },
    { "path": "../../packages/sdk" },
    { "path": "../../packages/shared" },
    { "path": "../../packages/validation" }
  ]
}
